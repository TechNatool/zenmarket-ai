# ZenMarket AI - Configuration Template
# Copy this file to .env and fill in your API keys

# === API Keys for News Sources ===
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_ENDPOINT=https://newsapi.org/v2

# === Market Data APIs ===
ALPHAVANTAGE_KEY=your_alphavantage_key_here
FINNHUB_KEY=your_finnhub_key_here

# === AI Services ===
# OpenAI API for summarization and analysis
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude API (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Choose AI provider: openai or anthropic
AI_PROVIDER=openai

# === Telegram Bot (Optional) ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === Email Notifications (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_RECIPIENT=recipient@example.com

# === Application Settings ===
LOG_LEVEL=INFO
REPORT_OUTPUT_DIR=./reports
DATA_CACHE_DIR=./data
TIMEZONE=Europe/Paris

# === Market Configuration ===
# Comma-separated list of tickers to track
MARKET_INDICES=^GDAXI,^IXIC,^GSPC,EURUSD=X,BTC-USD

# === News Configuration ===
NEWS_LOOKBACK_HOURS=24
NEWS_MAX_ARTICLES=50
NEWS_LANGUAGE=en

# === Report Configuration ===
REPORT_FORMATS=markdown,html,pdf
REPORT_INCLUDE_CHARTS=true
REPORT_CHART_STYLE=seaborn

# === Trading Configuration ===
# Trading mode: simulate (paper), backtest (historical), live (DANGEROUS)
TRADING_MODE=simulate

# Risk Management
RISK_PER_TRADE=0.0075           # 0.75% risk per trade (conservative)
RISK_PER_DAY=0.02               # 2% max daily risk
MAX_DRAWDOWN_DAILY=0.03         # 3% max daily drawdown (circuit breaker)
MAX_CONSECUTIVE_LOSSES=3        # Halt after 3 consecutive losses
MAX_OPEN_POSITIONS=5            # Max simultaneous positions

# Position Sizing
POSITION_SIZING_METHOD=fixed_fractional  # Options: fixed_fractional, kelly, fixed_dollar
DEFAULT_ORDER_TYPE=market       # Options: market, limit, stop, stop_limit

# Paper Trading Simulation
SIM_INITIAL_CAPITAL=100000.0    # Starting capital for simulation
SIM_SLIPPAGE_BPS=1.5            # Slippage in basis points (1.5 = 0.015%)
SIM_COMMISSION_PER_TRADE=2.0    # Commission per trade in dollars

# Broker Configuration (for live trading - NOT YET IMPLEMENTED)
BROKER=ibkr                     # Options: ibkr, mt5
BROKER_ACCOUNT=your_account_id
BROKER_API_KEY=your_broker_api_key
BROKER_API_SECRET=your_broker_api_secret

# Trading Advisor Settings
ADVISOR_ENABLED=true
ADVISOR_MA_SHORT=20
ADVISOR_MA_LONG=50
ADVISOR_RSI_PERIOD=14
ADVISOR_RSI_OVERBOUGHT=70
ADVISOR_RSI_OVERSOLD=30
ADVISOR_MIN_CONFIDENCE=0.5      # Minimum signal confidence to trade

# Journaling & Reporting
JOURNAL_ENABLED=true
JOURNAL_EXPORT_CSV=true
JOURNAL_EXPORT_JSON=true
JOURNAL_EXPORT_PDF=false        # PDF journal (requires WeasyPrint)
