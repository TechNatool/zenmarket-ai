# ZenMarket AI - Configuration Template
# Copy this file to .env and fill in your API keys

# === API Keys for News Sources ===
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_ENDPOINT=https://newsapi.org/v2

# === Market Data APIs ===
ALPHAVANTAGE_KEY=your_alphavantage_key_here
FINNHUB_KEY=your_finnhub_key_here

# === AI Services ===
# OpenAI API for summarization and analysis
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude API (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Choose AI provider: openai or anthropic
AI_PROVIDER=openai

# === Telegram Bot (Optional) ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === Email Notifications (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_RECIPIENT=recipient@example.com

# === Application Settings ===
LOG_LEVEL=INFO
REPORT_OUTPUT_DIR=./reports
DATA_CACHE_DIR=./data
TIMEZONE=Europe/Paris

# === Market Configuration ===
# Comma-separated list of tickers to track
MARKET_INDICES=^GDAXI,^IXIC,^GSPC,EURUSD=X,BTC-USD

# === News Configuration ===
NEWS_LOOKBACK_HOURS=24
NEWS_MAX_ARTICLES=50
NEWS_LANGUAGE=en

# === Report Configuration ===
REPORT_FORMATS=markdown,html,pdf
REPORT_INCLUDE_CHARTS=true
REPORT_CHART_STYLE=seaborn
